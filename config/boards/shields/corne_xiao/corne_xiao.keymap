#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define COMBO_TIMEOUT 60

#define DEF 0
#define ONE 1
#define TWO 2
#define THR 3
#define FOU 4
#define FIV 5
#define SIX 6

&lt {
    tapping-term-ms = <175>;
};

/ {
    combos {
        compatible = "zmk,combos";

 	    combo_del {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <0 1>;
            bindings = <&kp ESC>;
        };

    };
};

/ {
	behaviors {
        
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <165>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };

        td_l1: tap_dance_layer_1 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <170>;
            bindings = <&lt ONE ESC>, <&kp ESC>;
        };
        
        td_l2: tap_dance_layer_2 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <170>;
            bindings = <&lt TWO SPACE>, <&kp SPACE>;
        };

        td_l3: tap_dance_layer_3 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <170>;
            bindings = <&lt THR TAB>, <&kp TAB>;
        };

        td_l4: tap_dance_layer_4 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <170>;
            bindings = <&lt FOU RET>, <&kp RET>;
        };
        
        td_l5: tap_dance_layer_5 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <170>;
            bindings = <&lt FIV BSPC>, <&kp BSPC>;
        };

        td_l6: tap_dance_layer_6 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <170>;
            bindings = <&lt SIX DEL>, <&kp DEL>;
        };

     };
};

